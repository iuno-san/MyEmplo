@model IEnumerable<MyEmplo.Application.MyEmplo.MyEmploDto>

@{
    ViewData["Title"] = "My Employees";
}

<div class="d-flex">
	<div>
        <h1>My Employees</h1>
    </div>
    <div class="ms-auto">
        <a asp-action="Create">
            <button class="main-header__add">
                <svg fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15"></path>
                </svg>
            </button>
        </a>
    </div>
</div>

<div class="row mt-3">
    @foreach (var item in Model)
    {
        <div class="card m-3 shadow-sm" style="width: 18rem; border-radius: 15px; overflow: hidden;">
            <img class="avatar-img" src="/img/others/Baner_man.png" class="card-img-top" alt="Image">
            <div class="card-body">
                <h5 class="card-title">@item.FullName</h5>
                <h6 class="card-subtitle mb-2 card-custom-text">@item.PhoneNumber</h6>
                <p class="card-custom-text">@item.Email</p>
                <p class="card-custom-text">@item.Role</p>
                <a class="d-grid" asp-controller="MyEmplo" asp-action="Details" asp-route-encodedName="@item.EncodedName"><button class="btn-outline-dark button">Details</button></a>
                @if (item.IsEditable)
                {
                    @* <a class="btn btn-outline-secondary" asp-controller="MyEmplo" asp-action="Edit" asp-route-encodedName="@item.EncodedName">Edit</a> *@
                }
            </div>
        </div>
    }
</div>