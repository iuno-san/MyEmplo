@using MyEmplo.Application.MyEmplo.Commands.CreateMyEmplo;
@model CreateMyEmploCommand

<h1>Dodaj swojego pracownika</h1>
<h2>Wpisz dane swojego pracownika</h2>

<hr />

<div class="row">
    <div class="col-md-4">
        <form action="/MyEmplo/Create" method="post">
            <div class="form-group mb-3">
                <label class="control-label" asp-for="FullName">FullName</label>
                <input class="form-control" type="text" asp-for="FullName">
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label" asp-for="Email">Email</label>
                <input class="form-control" type="text" asp-for="Email">
            </div>

            <div class="form-group mb-3">
                <label class="control-label" asp-for="About">About</label>
                <input class="form-control" type="text" asp-for="About">
            </div>
            <div class="form-group mb-3">
                <label class="control-label" asp-for="PhoneNumber">PhoneNumber</label>
                <input class="form-control" type="text" asp-for="PhoneNumber">
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label class="control-label" asp-for="DateOfEmployment">DateOfEmployment</label>
                <input class="form-control" type="text" asp-for="DateOfEmployment">
            </div>
            <div class="form-group mb-3">
                <label class="control-label" asp-for="TypeOfEmployment">TypeOfEmployment</label>
                <input class="form-control" type="text" asp-for="TypeOfEmployment">
            </div>
            <div class="form-group mb-3">
                <label class="control-label" asp-for="Role">Role</label>
                <input class="form-control" type="text" asp-for="Role">
            </div>
            <div class="form-group mb-3">
                <label class="control-label" asp-for="Country">Country</label>
                <input class="form-control" type="text" asp-for="Country">
            </div>
            <div class="form-group mb-3">
                <label class="control-label" asp-for="Address">Address</label>
                <input class="form-control" type="Address" asp-for="Address">
            </div>
            <div class="form-group mb-3">
                <label class="control-label" asp-for="BankAccountNumber">BankAccountNumber</label>
                <input class="form-control" type="text" asp-for="BankAccountNumber">
            </div>
            <div class="form-group mb-3">
                <label class="control-label" asp-for="Skype">Skype</label>
                <input class="form-control" type="text" asp-for="Skype">
            </div>
            <div class="form-group mb-3">
                <label class="control-label" asp-for="Discord">Discord</label>
                <input class="form-control" type="text" asp-for="Discord">
            </div>


            <div class="form-group mb-3">
                <input type="submit" value="Create" class="btn btn-primary">
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}