@model MyEmplo.Application.MyEmploService.Commands.CreateMyEmploServiceCommand


<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createMyEmploServiceModal">
    Add new employes information
</button>

<!-- Modal -->
<div class="modal fade" id="createMyEmploServiceModal" tabindex="-1" aria-labelledby="createMyEmploServiceModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content"> 
              <form asp-action="CreateMyEmploService">

                <div class="modal-header">
                    <h5 class="modal-title" id="createMyEmploServiceModalLabel">Add new employees services</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input asp-for="MyEmploEncodedName" class="form-control" type="hidden" />

                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <input type="submit" value="Create" class="btn btn-primary">
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
